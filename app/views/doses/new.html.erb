<div class="container">
  <div class="text-center">
    <h1>Doses#new</h1>
    <p>Find me in app/views/doses/new.html.erb</p>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= simple_form_for([@cocktail, @dose]) do |c| %>
        <%= c.input :amount %>
        <%= c.input :description %>
        <%= c.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
        <%= c.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

