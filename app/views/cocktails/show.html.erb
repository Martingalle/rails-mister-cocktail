<%= render 'banner', var1:@cocktail.name%>

<div class="container">

  <h1>Recipe</h1>
  <p><%= link_to "Back to cocktails", cocktails_path  %></p>

  <div class="cocktail-infos">

    <div class="receipe">
      <table>
        <tr>
          <th>Ingredient</th>
          <th>Description</th>
          <th>Delete ?</th>
        </tr>
        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td><%= link_to icon('far', 'times-circle'), dose_path(dose), method: :delete, data: {confirm: "sure?"} %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="options">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm"  style = "margin-left: 15px;">
        Add a Dose ?
      </button>
      <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-sm" role="document">
          <div class="modal-content">
            <%= render 'doses/form', cocktail: @cocktail, dose: @dose %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="reviews">
    <h1>Reviews</h1>
    <% @reviews.each do |review| %>
      <%= review.description %>
      <% review.rating.times do %>
        <i class='fa fa-star' style="color: #F9C72E;"></i>
      <% end %>
      <% (5 - review.rating).times do %>
        <i class='fa fa-star' style="color: #CCCCCC;"></i>
      <%=  %>
      <% end %>
    <% end %>
  </div>
  <div class="review">
    <%= link_to "Add a review", cocktail_path(@cocktail) %>
    <%= render 'reviews/form', cocktail:@cocktail, review:@review %>
  </div>
</div>


