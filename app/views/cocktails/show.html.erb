<%= render 'banner', var1:@cocktail.name%>

<div class="container">

  <h1>Recipe</h1>
  <p><%= link_to "Back to cocktails", cocktails_path  %></p>

  <%= cl_image_tag("uiogaork4b3jvqx8rs9k",
      width: 400, height: 300, crop: :fill) %>

  <div class="cocktail-infos">

    <div class="receipe">
      <table>
        <tr>
          <th>Ingredient</th>
          <th>Description</th>
          <th>Delete ?</th>
        </tr>
        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td><%= link_to icon('far', 'times-circle'), dose_path(dose), method: :delete, data: {confirm: "sure?"} %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="options">
      <input type="submit" id="add-a-dose" value="add-a-dose" class = "btn btn-primary" style = "margin-left: 15px;">
    </div>
    </div>
    <div class="form">
      <div id="form-new" class="hidden">
        <%= render 'doses/form', cocktail: @cocktail, dose:@dose %>
      </div>
    </div>
  </div>

  <div class="review">
    <%= link_to "Add a review", cocktail_path(@cocktail) %>
    <%= render 'reviews/form', cocktail:@cocktail, review:@review %>
  </div>

  <div class="reviews">
    <% @reviews.each do |review| %>
      <%= review.description %>
    <% end %>
  </div>
</div>


